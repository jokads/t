# MT5 Trading Dashboard - Frontend Configuration
# Copy this file to .env and configure your backend endpoints

# Backend API Base URL (Flask REST API)
VITE_API_URL=http://localhost:5000

# WebSocket URL (Flask-SocketIO)
VITE_WS_URL=ws://127.0.0.1:9090

# Admin Token (get from backend /api/login)
VITE_ADMIN_TOKEN=your_admin_token_here

# WebSocket Reconnection Settings
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_DELAY=3000

# API Request Timeout (ms)
VITE_API_TIMEOUT=10000

# Enable Debug Mode
VITE_DEBUG_MODE=false
