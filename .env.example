# ========================================
# MT5 TRADING BOT - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and configure

# ========================================
# MT5 CONNECTION
# ========================================
MT5_SOCKET_HOST=127.0.0.1
MT5_SOCKET_PORT=9090
AUTO_INIT_MT5=true

# ========================================
# EXECUTION MODE
# ========================================
DRY_RUN=false                    # true = não executa trades reais
MIN_TRADE_INTERVAL=300           # Segundos entre trades do mesmo símbolo
MIN_VOLUME=0.01                  # Volume mínimo de lote
MAX_VOLUME=1.0                   # Volume máximo de lote

# ========================================
# AI CONFIGURATION
# ========================================
USE_AI=true                      # Habilitar AI
AI_MODE=validation               # validation | primary | disabled
AI_TIMEOUT=10                    # Timeout de chamadas AI (segundos)
AI_MIN_CONFIDENCE=0.30           # Confidence mínima para AI override
AI_MAX_CONCURRENT_MODELS=3       # Modelos AI concorrentes

# AI Model Paths (opcional)
# MODEL_PATH=./models/
# LLAMA_MODEL_PATH=./models/llama-7b.gguf

# ========================================
# STRATEGY CONFIGURATION
# ========================================
STRATEGY_MODE=hybrid             # hybrid | technical | ai_only
MIN_CONFIDENCE=0.40              # Confidence mínima para executar trade

# Strategy Weights (HybridStrategy)
WEIGHT_SUPERTREND=0.30
WEIGHT_EMA=0.20
WEIGHT_RSI=0.20
WEIGHT_BOLLINGER=0.15
WEIGHT_ICT=0.15
HYBRID_MIN_CONFIDENCE=0.40

# Strategy Timeouts
STRAT_CYCLE_TIMEOUT=5.0          # Timeout do ciclo de estratégias
STRAT_CALL_TIMEOUT=2.0           # Timeout por estratégia

# ========================================
# FALLBACK CONFIGURATION
# ========================================
FALLBACK_ENABLED=true            # Habilitar fallback quando AI falha
FALLBACK_STRATEGY=ema_rsi        # ema_rsi | supertrend | conservative

# ========================================
# RISK MANAGEMENT
# ========================================
DEFAULT_SL_PIPS=75               # Stop Loss padrão (pips)
DEFAULT_TP_PIPS=150              # Take Profit padrão (pips)
MAX_RISK_PER_TRADE=0.02          # Risco máximo por trade (2% do capital)
MAX_DAILY_LOSS=0.05              # Perda máxima diária (5% do capital)

# ========================================
# WEBSOCKET DASHBOARD (OPCIONAL)
# ========================================
USE_DASHBOARD=false              # Habilitar dashboard WebSocket
DASHBOARD_PORT=8080              # Porta do dashboard
WS_PING_INTERVAL=30              # Intervalo de ping (segundos)
WS_PING_TIMEOUT=60               # Timeout de ping (segundos)
WS_MAX_SIZE=1048576              # Tamanho máximo de mensagem (bytes)

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO                   # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=json                  # json | text
LOG_FILE=trading_bot.log         # Arquivo de log

# ========================================
# MONITORING (OPCIONAL)
# ========================================
SENTRY_DSN=                      # Sentry DSN para error tracking
PROMETHEUS_PORT=9091             # Porta para métricas Prometheus

# ========================================
# SYMBOLS
# ========================================
# Símbolos para trading (separados por vírgula)
SYMBOLS=EURUSD,GBPUSD,USDJPY,AUDUSD

# ========================================
# LOOP CONFIGURATION
# ========================================
LOOP_INTERVAL=5                  # Intervalo do loop principal (segundos)
